<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.otaliastudios.cameraview.CameraView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:keepScreenOn="true"
            app:cameraPlaySounds="false"
            app:cameraGrid="off"
            app:cameraFacing="back"
            app:cameraFlash="auto"
            app:cameraAudio="on"
            app:cameraGestureTap="focusWithMarker"
            app:cameraGestureLongTap="none"
            app:cameraGesturePinch="zoom"
            app:cameraJpegQuality="80"
            app:cameraVideoQuality="max480p"
            app:cameraSessionType="picture"
            android:id="@+id/camera_preview"/>
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/camera_holder"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            app:layout_constraintTop_toBottomOf="parent"
            android:layout_alignParentBottom="true">
            <com.dewarder.camerabutton.CameraButton
                android:id="@+id/cameraCaptureButton"
                android:layout_width="@dimen/cb_layout_width_default"
                android:layout_height="@dimen/cb_layout_height_default"
                android:layout_gravity="center_horizontal|bottom"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/cameraSwitch"
                app:layout_constraintStart_toEndOf="@+id/gallerySwitch"
                app:cb_hold_duration="20000"/>
            <android.support.design.widget.FloatingActionButton
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal|bottom"
                app:fabSize="normal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/cameraSwitch"
                app:layout_constraintStart_toEndOf="@+id/gallerySwitch"
                android:layout_marginBottom="30dp"
                app:elevation="2dp"
                android:src="@drawable/ic_done"
                app:backgroundTint="@color/colorGreen"
                android:visibility="gone"
                android:id="@+id/capture_done"/>
            <ImageButton
                android:id="@+id/gallerySwitch"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_gravity="bottom"
                android:layout_marginEnd="16dp"
                app:layout_constraintBottom_toBottomOf="@+id/cameraCaptureButton"
                app:layout_constraintEnd_toStartOf="@+id/cameraCaptureButton"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/cameraCaptureButton"
                app:srcCompat="@drawable/ic_gallery"
                android:background="@android:color/transparent"
                android:scaleType="centerCrop"
                android:tint="@color/colorWhite"/>

            <ImageButton
                android:id="@+id/cameraSwitch"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_gravity="bottom"
                android:layout_marginStart="16dp"
                app:layout_constraintBottom_toBottomOf="@+id/cameraCaptureButton"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/cameraCaptureButton"
                app:layout_constraintTop_toTopOf="@+id/cameraCaptureButton"
                app:srcCompat="@drawable/ic_sync_white_36dp"
                android:background="@android:color/transparent"
                android:visibility="invisible"
                android:tint="@color/colorWhite"/>
        </android.support.constraint.ConstraintLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="15dp"
        android:id="@+id/upper_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:focusableInTouchMode="true"
            android:orientation="vertical">
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="5dp">
                <LinearLayout
                    android:id="@+id/newCon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="14dp"
                    android:orientation="horizontal">
                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:drawablePadding="8dp"
                        android:gravity="center_vertical"
                        android:paddingStart="10dp"
                        android:hint="Start reporting an issues here..."
                        android:textColor="@color/colorBlack"
                        android:textSize="15sp"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:fontFamily="@font/light_xml"
                        android:maxLength="@integer/post_text_limit"
                        android:id="@+id/postText"
                        android:imeOptions="actionSend"/>
                    <com.akaita.android.morphview.MorphView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:padding="11dp"
                        app:avdFirst="@drawable/ic_cam_send"
                        app:avdSecond="@drawable/ic_send_cam"
                        android:clickable="true"
                        android:focusable="true"
                        android:id="@+id/btnSendCamera"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="5dp"
                android:visibility="gone">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_anonymous_enable"
                        android:layout_margin="2dp"
                        android:padding="2dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:text="anonymous"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>

        <ProgressBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:indeterminate="false"
            android:id="@+id/homeCharProgress"
            android:scaleY="30"
            android:max="@integer/post_text_limit"
            android:focusable="false"
            android:alpha="0.2"/>
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@color/colorForeground"
            android:id="@+id/pic"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
</RelativeLayout>