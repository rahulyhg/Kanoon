<?xml version="1.0" encoding="utf-8"?>
<io.codetail.widget.RevealFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.rvsoftlab.kanoon.activities.MainActivity"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/toolbar"
            android:layout_alignParentTop="true"/>
        <com.rvsoftlab.kanoon.view.KiewPager
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/bottom_navigation"
            android:layout_below="@id/toolbar">

        </com.rvsoftlab.kanoon.view.KiewPager>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:id="@+id/bottom_navigation"
            android:orientation="horizontal">
            <net.soulwolf.widget.materialradio.MaterialRadioGroup
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1">
                <net.soulwolf.widget.materialradio.MaterialRadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:mcTextColor="@color/colorAccent"
                    app:mcButton="@drawable/dr_home"
                    app:mcAnimator="true"
                    android:layout_weight="1"/>
                <net.soulwolf.widget.materialradio.MaterialRadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:mcTextColor="@color/colorAccent"
                    app:mcButton="@drawable/dr_news"
                    app:mcAnimator="true"
                    android:layout_weight="1"/>
                <net.soulwolf.widget.materialradio.MaterialRadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:mcTextColor="@color/colorAccent"
                    app:mcButton="@drawable/dr_robot"
                    app:mcAnimator="true"
                    android:layout_weight="1"
                    android:visibility="invisible"/>
                <net.soulwolf.widget.materialradio.MaterialRadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:mcTextColor="@color/colorAccent"
                    app:mcButton="@drawable/dr_robot"
                    app:mcAnimator="true"
                    android:layout_weight="1"/>

            </net.soulwolf.widget.materialradio.MaterialRadioGroup>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="4">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_home_color"
                    app:civ_border_color="@color/colorBlack"
                    app:civ_border_width="1dp"/>
            </LinearLayout>
        </LinearLayout>


    </RelativeLayout>
    <ImageButton
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="16dp"
        android:src="@drawable/ic_camera"
        android:scaleType="centerCrop"
        android:background="@android:color/transparent"
        android:id="@+id/fab_camera"/>

    <include layout="@layout/content_main" />

</io.codetail.widget.RevealFrameLayout>
