        <net.soulwolf.widget.materialradio.MaterialRadioGroup
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_alignParentBottom="true"
            android:id="@+id/bottom_navigation"
            android:orientation="horizontal">
            <net.soulwolf.widget.materialradio.MaterialRadioButton
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:mcTextColor="@color/colorAccent"
                app:mcButton="@drawable/dr_home"
                app:mcAnimator="true"
                android:layout_weight="1"/>
            <net.soulwolf.widget.materialradio.MaterialRadioButton
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:mcTextColor="@color/colorAccent"
                app:mcButton="@drawable/dr_news"
                app:mcAnimator="true"
                android:layout_weight="1"/>
            <net.soulwolf.widget.materialradio.MaterialRadioButton
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:mcTextColor="@color/colorAccent"
                app:mcButton="@drawable/dr_robot"
                app:mcAnimator="true"
                android:layout_weight="1"/>
            <net.soulwolf.widget.materialradio.MaterialRadioButton
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:mcTextColor="@color/colorAccent"
                app:mcButton="@drawable/dr_robot"
                app:mcAnimator="true"
                android:layout_weight="1"/>
            <net.soulwolf.widget.materialradio.MaterialRadioButton
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:mcTextColor="@color/colorAccent"
                app:mcButton="@drawable/dr_robot"
                app:mcAnimator="true"
                android:layout_weight="1"/>
        </net.soulwolf.widget.materialradio.MaterialRadioGroup>


    </RelativeLayout>
