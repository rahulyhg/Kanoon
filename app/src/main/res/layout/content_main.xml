<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/camera_content"
    android:visibility="gone"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <com.otaliastudios.cameraview.CameraView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:keepScreenOn="true"
            app:cameraPlaySounds="false"
            app:cameraGrid="off"
            app:cameraFacing="back"
            app:cameraFlash="auto"
            app:cameraAudio="on"
            app:cameraGestureTap="focusWithMarker"
            app:cameraGestureLongTap="none"
            app:cameraGesturePinch="zoom"
            app:cameraJpegQuality="100"
            app:cameraSessionType="picture"
            android:id="@+id/camera_preview"
            android:visibility="visible"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:id="@+id/image_preview"/>
    </RelativeLayout>
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/camera_holder"
        android:background="@color/colorWhite"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        app:layout_constraintTop_toBottomOf="parent">
        <com.dewarder.camerabutton.CameraButton
            android:id="@+id/camera_button"
            android:layout_width="@dimen/cb_layout_width_default"
            android:layout_height="@dimen/cb_layout_height_default"
            android:layout_gravity="center_horizontal|bottom"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/camera_switch"
            app:layout_constraintStart_toEndOf="@+id/gallery_switch"
            app:cb_main_circle_color="@color/colorAccent"
            app:cb_main_circle_color_pressed="@color/colorRed"
            app:cb_hold_duration="30000"/>
        <android.support.design.widget.FloatingActionButton
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal|bottom"
            app:fabSize="normal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/camera_switch"
            app:layout_constraintStart_toEndOf="@+id/gallery_switch"
            android:layout_marginBottom="30dp"
            app:elevation="2dp"
            android:src="@drawable/ic_done"
            app:backgroundTint="@color/colorGreen"
            android:visibility="gone"
            android:id="@+id/capture_done"/>
        <ImageButton
            android:id="@+id/gallery_switch"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_gravity="bottom"
            android:layout_marginEnd="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/camera_button"
            app:layout_constraintEnd_toStartOf="@+id/camera_button"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/camera_button"
            app:srcCompat="@drawable/ic_gallery"
            android:background="@android:color/transparent"
            android:scaleType="centerCrop"
            android:tint="@color/colorBlack"/>

        <ImageButton
            android:id="@+id/camera_switch"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_gravity="bottom"
            android:layout_marginStart="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/camera_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/camera_button"
            app:layout_constraintTop_toTopOf="@+id/camera_button"
            app:srcCompat="@drawable/ic_sync_white_36dp"
            android:background="@android:color/transparent"
            android:visibility="visible"
            android:tint="@color/colorBlack"/>
    </android.support.constraint.ConstraintLayout>


</LinearLayout>